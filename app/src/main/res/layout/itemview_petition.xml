<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/petition_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/petition_name_text_view">

        <ImageView
            android:id="@+id/petition_image_image_view"
            android:layout_width="397dp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.064" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="394dp"
            android:layout_height="163dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/blackbackground"
            app:layout_constraintBottom_toBottomOf="@+id/petition_image_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/petition_image_image_view"
            app:layout_constraintVertical_bias="1.0">


            <TextView
                android:id="@+id/petition_name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="32dp"
                android:gravity="left|center_horizontal"
                android:text="Petition Name"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@+id/petition_description_text_view"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/petition_description_text_view"
                android:layout_width="374dp"
                android:layout_height="61dp"
                android:layout_marginTop="64dp"
                android:gravity="left|center_horizontal"
                android:text="Petition Description"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                app:layout_constraintBottom_toTopOf="@+id/progress_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/button2"
                android:layout_width="85dp"
                android:layout_height="24dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@null"
                android:text="Read more"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/petition_description_text_view"
                app:layout_constraintEnd_toEndOf="@+id/petition_description_text_view" />

            <ProgressBar
                android:id="@+id/progress_bar_signatures"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="378dp"
                android:layout_height="11dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="24dp"
                android:progress="50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/signatures_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:text="3234.456 singed of 500,000 goal"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.011"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                app:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
